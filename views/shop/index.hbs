<div class="row">
    <div class="col-md-4"></div>
    <div class="col-sm-6 col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-succes" {{#if noMessages}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>

<br>

{{#each shoes}}
<div class="row">
    {{# each this}}
    <div class="col-sm-6 col-md-3">
        <div class="card" style="width: 15rem;">
            <img class="card-img-top img-responsive" src="{{this.imagePath}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <div class="row">
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <h4>
                        <b>$ {{this.price}}</b>
                    </h4>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-info">
                        <b> Shikat!</b>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

